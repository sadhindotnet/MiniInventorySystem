@model MiniInventorySystem.Models.Login

@{
    ViewData["Title"] = "User Login";
    Layout = null;
}
<header>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</header>

<style>
    body {
        margin: 0;
        background-color: #f2f2f2;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.15);
        max-width: 400px;
        width: 100%;
        overflow: hidden;
    }

        .login-card .card-header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        .login-card .card-body {
            padding: 30px;
        }

        .login-card .card-footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 15px;
            font-size: 0.9rem;
            color: #666;
        }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="card-header">
            <h4 class="mb-0">Sign In</h4>
        </div>
        <div class="card-body">

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3 form-group">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3 form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>

        </div>
        <div class="card-footer">
            &copy; @DateTime.Now.Year Mini Inventory System
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
